<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DixKontrol.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Degradado Windows -->
            <LinearGradientBrush x:Key="GradientWindows" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#050509" Offset="0.0" />
                <GradientStop Color="#151525" Offset="0.4" />
                <GradientStop Color="#000000" Offset="1.0" />
            </LinearGradientBrush>

            <!-- Degradado Android -->
            <LinearGradientBrush x:Key="GradientAndroid" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFFFFF" Offset="0.0" />
                <GradientStop Color="#CCCCCC" Offset="0.5" />
                <GradientStop Color="#333333" Offset="1.0" />
            </LinearGradientBrush>
            
            <!-- Estilo Label con TextColor según plataforma -->
            <Style TargetType="Label">
                <Setter Property="TextColor">
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="Android" Value="Black" />
                        <On Platform="Windows" Value="White" />
                    </OnPlatform>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>

</Application>