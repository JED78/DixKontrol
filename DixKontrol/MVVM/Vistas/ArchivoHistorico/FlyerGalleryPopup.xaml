<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="DixKontrol.MVVM.Vistas.ArchivoHistorico.FlyerGalleryPopup"
               CanBeDismissedByTappingOutsideOfPopup="True">

    <!-- FONDO -->
    <toolkit:Popup.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#050509" Offset="0.0" />
            <GradientStop Color="#151525" Offset="0.4" />
            <GradientStop Color="#000000" Offset="1.0" />
        </LinearGradientBrush>
    </toolkit:Popup.Background>

    <!-- CONTENEDOR RESPONSIVE -->
    <Grid Padding="20"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          MaximumWidthRequest="600"
          MaximumHeightRequest="800">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- CARRUSEL AJUSTABLE -->
        <CarouselView Grid.Row="0"
                      x:Name="FlyerCarousel"
                      Loop="True"
                      IndicatorView="Indicadores"
                      HorizontalOptions="Center"
                      VerticalOptions="Center">

            <CarouselView.ItemTemplate>
                <DataTemplate>

                    <!-- MARCO QUE SE AJUSTA AL ESPACIO DISPONIBLE -->
                    <Grid HorizontalOptions="Center"
                          VerticalOptions="Center">

                        <Image Source="{Binding}"
                               Aspect="AspectFit"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Grid>

                </DataTemplate>
            </CarouselView.ItemTemplate>

        </CarouselView>

        <!-- INDICADORES -->
        <IndicatorView Grid.Row="1"
                       x:Name="Indicadores"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       IndicatorColor="Gray"
                       SelectedIndicatorColor="White"
                       Margin="0,10"/>

    </Grid>

</toolkit:Popup>