<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DixKontrol.MVVM.Vistas.ArchivoHistorico.LineaTemporal"
            BackgroundColor="Transparent">

    <!-- FONDO DEGRADADO -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="White" Offset="0.0" />
            <GradientStop Color="Black" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- TÍTULO -->
            <Label Text="Línea temporal"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   Margin="0,10" />

            <!-- ITEM 1 -->
            <Frame BackgroundColor="#10FFFFFF"
                   CornerRadius="12"
                   Padding="15">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Finales de los 80"
                           FontFamily="Montserrat-Bold.ttf"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Label Text="Nando inicia su trayectoria como DJ en Barcelona, explorando nuevos sonidos electrónicos y desarrollando un estilo propio que pronto llamaría la atención en la escena underground."
                           FontSize="16"
                           FontFamily="Montserrat-Regular.ttf"
                           TextColor="White"
                           LineHeight="1.35" />
                </VerticalStackLayout>
            </Frame>

            <!-- ITEM 2 -->
            <Frame BackgroundColor="#10FFFFFF"
                   CornerRadius="12"
                   Padding="15">
                <VerticalStackLayout Spacing="6">
                    <Label Text="1990"
                           FontSize="20"
                           FontAttributes="Bold"
                           FontFamily="Montserrat-Bold.ttf"
                           TextColor="Black" />

                    <Label Text="Se convierte en una figura clave del Psicódromo, la sala que marcaría un antes y un después en la cultura electrónica catalana. Su estilo energético y su presencia en cabina lo consolidan como referente."
                           FontSize="16"
                           TextColor="White"
                           FontFamily="Montserrat-Regular.ttf"
                           LineHeight="1.35" />
                </VerticalStackLayout>
            </Frame>

            <!-- ITEM 3 -->
            <Frame BackgroundColor="#10FFFFFF"
                   CornerRadius="12"
                   Padding="15">
                <VerticalStackLayout Spacing="6">
                    <Label Text="1991–1993"
                           FontFamily="Montserrat-Bold.ttf"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Label Text="Participa en sesiones históricas que definen el sonido mákina. Su influencia se extiende más allá de Barcelona, llegando a consolidarse como uno de los DJs más reconocidos del país."
                           FontSize="16"
                           FontFamily="Montserrat-Regular.ttf"
                           TextColor="White"
                           LineHeight="1.35" />
                </VerticalStackLayout>
            </Frame>

            <!-- ITEM 4 -->
            <Frame BackgroundColor="#10FFFFFF"
                   CornerRadius="12"
                   Padding="15">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Mediados de los 90"
                           FontFamily="Montserrat-Bold.ttf"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Label Text="Su figura se convierte en símbolo de una generación. Continúa actuando, colaborando y dejando huella en la evolución del sonido electrónico en Cataluña."
                           FontSize="16"
                           TextColor="White"
                           FontFamily="Montserrat-Regular.ttf"
                           LineHeight="1.35" />
                </VerticalStackLayout>
            </Frame>

            <!-- ITEM 5 -->
            <Frame BackgroundColor="#10FFFFFF"
                   CornerRadius="12"
                   Padding="15">
                <VerticalStackLayout Spacing="6">
                    <Label Text="2000 en adelante"
                           FontFamily="Montserrat-Bold.ttf"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Label Text="Su legado permanece vivo en grabaciones, testimonios y en la memoria colectiva de la escena electrónica. Su nombre sigue siendo sinónimo de autenticidad y revolución musical."
                           FontSize="16"
                           TextColor="White"
                           LineHeight="1.35" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
