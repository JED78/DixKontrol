<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DixKontrol.MVVM.Vistas.ArchivoHistorico.VideoPage"
             BackgroundColor="Transparent"
             xmlns:local="clr-namespace:DixKontrol">


    <!-- GRID PRINCIPAL: ARRIBA TEXTO, ABAJO VIDEO A PANTALLA COMPLETA -->
    <Grid RowDefinitions="Auto, Auto, *"
          Padding="20"
          RowSpacing="25">

        <!-- TÍTULO -->
        <Label Grid.Row="0"
               Text="Nando Dixkontrol: Leyenda viva de la música electrónica (Vice en español)"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#FFD966"
               HorizontalTextAlignment="Center"
               Margin="0,10" />

        <!-- DESCRIPCIÓN -->
        <Frame Grid.Row="1"
               BackgroundColor="#10FFFFFF"
               CornerRadius="12"
               Padding="15">
            <Label Text="En pleno furor preolímpico, la noche barcelonesa vivió una edad dorada..."
                   FontSize="16"
                   TextColor="White"
                   LineHeight="1.35" />
        </Frame>

        <!-- VIDEO A PANTALLA COMPLETA -->
        <Frame Grid.Row="2"
               BackgroundColor="#20FFFFFF"
               CornerRadius="12"
               Padding="10"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand">

            <WebView Source="https://www.youtube.com/watch?v=Z9EaqRb2TpM"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand" />

        </Frame>

    </Grid>

</local:BasePage>