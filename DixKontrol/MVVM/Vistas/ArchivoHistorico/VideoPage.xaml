<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DixKontrol.MVVM.Vistas.ArchivoHistorico.VideoPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="Transparent">

    <!-- FONDO DEGRADADO -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#050509" Offset="0.0" />
            <GradientStop Color="#151525" Offset="0.4" />
            <GradientStop Color="#000000" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- TÍTULO -->
            <Label Text="Nando Dixkontrol: Leyenda viva de la música electrónica (Vice en español)"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#FFD966"
                   HorizontalTextAlignment="Center"
                   Margin="0,10" />

            <!-- DESCRIPCIÓN -->
            <Frame BackgroundColor="#10FFFFFF"
                   CornerRadius="12"
                   Padding="15">
                <Label Text="En pleno furor preolímpico, la noche barcelonesa vivió una edad dorada que muchos no olvidarán jamás. Su punto álgido fue a finales de los ochenta, cuando nació Psicódromo, una mítica sala que se convirtió en el templo de una generación donde la música mákina era el credo. Allí se fraguó la leyenda del genial Nando Dixkontrol, el enfant terrible de la electrónica española que puso a sus pies a toda esa escena a base de mezclas imposibles, discos en llamas y discursos irrepetibles."
                       FontSize="16"
                       TextColor="White"
                       LineHeight="1.35" />
            </Frame>

            <!-- VIDEO -->
            <Frame BackgroundColor="#20FFFFFF"
                   CornerRadius="12"
                   Padding="10">

                <toolkit:MediaElement
                    x:Name="VideoPlayer"
                    Source="Vice.mp4"
                    AutoPlay="True"
                    ShowsPlaybackControls="True"
                    Aspect="AspectFit"
                    HeightRequest="250" />

            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
