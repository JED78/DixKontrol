<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="DixKontrol.MVVM.Vistas.RelatoDocumental.EnlacesPage"
                xmlns:local="clr-namespace:DixKontrol"
                BackgroundColor="Transparent">

    <!-- FONDO DEGRADADO -->
    <local:BasePage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#050509" Offset="0.0" />
            <GradientStop Color="#0D0D18" Offset="0.35" />
            <GradientStop Color="#000000" Offset="1.0" />
        </LinearGradientBrush>
    </local:BasePage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="28">

            <!-- TÍTULO -->
            <Label Text="Redes Sociales y Páginas Oficiales"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#FFD966"
                   HorizontalTextAlignment="Center"
                   FontFamily="Montserrat-Bold.ttf"
                   Margin="0,10,0,10"/>

            <!-- SPOTIFY -->
            <Frame BackgroundColor="#12FFFFFF"
                   BorderColor="#30FFD966"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="False"
                   Margin="0,0,0,26">

                <VerticalStackLayout Spacing="14">

                    <Label Text="Spotify – Playlist Oficial"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#FFD966"
                           FontFamily="Montserrat-Bold.ttf"/>

                    <Label Text="Escucha sesiones, recopilatorios y música seleccionada."
                           FontSize="14"
                           TextColor="#CCCCCC"
                           FontFamily="Montserrat-Regular.ttf"/>

                    <Button Text="▶ Abrir Spotify"
                            BackgroundColor="#FFD966"
                            TextColor="Black"
                            CornerRadius="22"
                            FontFamily="Montserrat-Bold.ttf"
                            HorizontalOptions="Center"
                            WidthRequest="160"
                            HeightRequest="38"
                            Padding="10,4"
                            FontSize="15"
                            Clicked="OpenSpotify"/>

                </VerticalStackLayout>
            </Frame>

            <!-- FACEBOOK -->
            <Frame BackgroundColor="#12FFFFFF"
                   BorderColor="#30FFD966"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="False"
                   Margin="0,0,0,26">

                <VerticalStackLayout Spacing="14">

                    <Label Text="Facebook – Galería y Recuerdos"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#FFD966"
                           FontFamily="Montserrat-Bold.ttf"/>

                    <Label Text="Fotos, recuerdos y publicaciones históricas."
                           FontSize="14"
                           TextColor="#CCCCCC"
                           FontFamily="Montserrat-Regular.ttf"/>

                    <Button Text="▶ Abrir Facebook"
                            BackgroundColor="#FFD966"
                            TextColor="Black"
                            CornerRadius="22"
                            FontFamily="Montserrat-Bold.ttf"
                            HorizontalOptions="Center"
                            WidthRequest="160"
                            HeightRequest="38"
                            Padding="10,4"
                            FontSize="15"
                            Clicked="OpenFacebook"/>

                </VerticalStackLayout>
            </Frame>

            <!-- INSTAGRAM -->
            <Frame BackgroundColor="#12FFFFFF"
                   BorderColor="#30FFD966"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="False"
                   Margin="0,0,0,26">

                <VerticalStackLayout Spacing="14">

                    <Label Text="Instagram – Fotos y Momentos"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#FFD966"
                           FontFamily="Montserrat-Bold.ttf"/>

                    <Label Text="Imágenes, recuerdos y esencia visual de Nando."
                           FontSize="14"
                           TextColor="#CCCCCC"
                           FontFamily="Montserrat-Regular.ttf"/>

                    <Button Text="▶ Abrir Instagram"
                            BackgroundColor="#FFD966"
                            TextColor="Black"
                            CornerRadius="22"
                            FontFamily="Montserrat-Bold.ttf"
                            HorizontalOptions="Center"
                            WidthRequest="160"
                            HeightRequest="38"
                            Padding="10,4"
                            FontSize="15"
                            Clicked="OpenInstagram"/>

                </VerticalStackLayout>
            </Frame>

            <!-- YOUTUBE -->
            <Frame BackgroundColor="#12FFFFFF"
                   BorderColor="#30FFD966"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="False"
                   Margin="0,0,0,26">

                <VerticalStackLayout Spacing="14">

                    <Label Text="YouTube – Canal Oficial"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#FFD966"
                           FontFamily="Montserrat-Bold.ttf"/>

                    <Label Text="Sesiones, vídeos y material histórico."
                           FontSize="14"
                           TextColor="#CCCCCC"
                           FontFamily="Montserrat-Regular.ttf"/>

                    <Button Text="▶ Abrir YouTube"
                            BackgroundColor="#FFD966"
                            TextColor="Black"
                            CornerRadius="22"
                            FontFamily="Montserrat-Bold.ttf"
                            HorizontalOptions="Center"
                            WidthRequest="160"
                            HeightRequest="38"
                            Padding="10,4"
                            FontSize="15"
                            Clicked="OpenYouTube"/>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</local:BasePage>