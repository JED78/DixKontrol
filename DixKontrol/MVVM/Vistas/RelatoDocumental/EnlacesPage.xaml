<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DixKontrol.MVVM.Vistas.RelatoDocumental.EnlacesPage"
             >
   
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#000000" Offset="0.0" />
            <GradientStop Color="#111111" Offset="0.5" />
            <GradientStop Color="#1A1A1A" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Título -->
            <Label Text="Redes Sociales y Páginas Oficiales"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   FontFamily="Montserrat-Bold.ttf"
                   Margin="0,10,0,20"/>

            <!-- SPOTIFY -->
            <Frame BackgroundColor="#1E1E1E"
                   CornerRadius="14"
                   Padding="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="6">

                    <Label Text="Spotify – Playlist Oficial"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontFamily="Montserrat-Bold.ttf"/>

                    <Label Text="Escucha sesiones, recopilatorios y música seleccionada."
                           FontSize="14"
                           TextColor="#CCCCCC"
                           FontFamily="Montserrat-Regular.ttf"/>

                    <Button Text="Abrir Spotify"
                            BackgroundColor="White"
                            TextColor="White"
                            CornerRadius="10"
                            FontFamily="Montserrat-Bold.ttf"
                            Clicked="OpenSpotify"/>
                </VerticalStackLayout>
            </Frame>

            <!-- FACEBOOK -->
            <Frame BackgroundColor="#1E1E1E"
                   CornerRadius="14"
                   Padding="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="6">

                    <Label Text="Facebook – Galería y Recuerdos"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontFamily="Montserrat-Bold.ttf"/>

                    <Label Text="Fotos, recuerdos y publicaciones históricas."
                           FontSize="14"
                           TextColor="#CCCCCC"
                           FontFamily="Montserrat-Regular.ttf"/>

                    <Button Text="Abrir Facebook"
                            BackgroundColor="White"
                            TextColor="Black"
                            CornerRadius="10"
                            FontFamily="Montserrat-Bold.ttf"
                            Clicked="OpenFacebook"/>
                </VerticalStackLayout>
            </Frame>

            <!-- INSTAGRAM -->
            <Frame BackgroundColor="#1E1E1E"
                   CornerRadius="14"
                   Padding="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="6">

                    <Label Text="Instagram – Fotos y Momentos"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontFamily="Montserrat-Bold.ttf"/>

                    <Label Text="Imágenes, recuerdos y esencia visual de Nando."
                           FontSize="14"
                           TextColor="#CCCCCC"
                           FontFamily="Montserrat-Regular.ttf"/>

                    <Button Text="Abrir Instagram"
                            BackgroundColor="White"
                            TextColor="Black"
                            CornerRadius="10"
                            FontFamily="Montserrat-Bold.ttf"
                            Clicked="OpenInstagram"/>
                </VerticalStackLayout>
            </Frame>

            <!-- YOUTUBE -->
            <Frame BackgroundColor="#1E1E1E"
                   CornerRadius="14"
                   Padding="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="6">

                    <Label Text="YouTube – Canal Oficial"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontFamily="Montserrat-Bold.ttf"/>

                    <Label Text="Sesiones, vídeos y material histórico."
                           FontSize="14"
                           TextColor="#CCCCCC"
                           FontFamily="Montserrat-Regular.ttf"/>

                    <Button Text="Abrir YouTube"
                            BackgroundColor="White"
                            TextColor="Black"
                            CornerRadius="10"
                            FontFamily="Montserrat-Bold.ttf"
                            Clicked="OpenYouTube"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
