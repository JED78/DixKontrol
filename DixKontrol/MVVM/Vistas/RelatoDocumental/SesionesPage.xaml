<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DixKontrol.MVVM.Vistas.RelatoDocumental.SesionesPage"
            >
    
    <!-- Fondo degradado -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#000000" Offset="0.0" />
            <GradientStop Color="#111111" Offset="0.5" />
            <GradientStop Color="#1A1A1A" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Título -->
            <Label Text="Sesiones de Nando Dixkontrol"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   FontFamily="Montserrat-Bold.ttf"
                   Margin="0,10,0,20"/>

            <!-- PLAYLIST DINÁMICO -->
            <CollectionView ItemsSource="{Binding Sesiones}"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E1E1E"
                               CornerRadius="14"
                               Padding="15"
                               HasShadow="True"
                               Margin="0,0,0,14">

                            <VerticalStackLayout Spacing="6">

                                <Label Text="{Binding Nombre}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#FFCC00"
                                       FontFamily="Montserrat-Bold.ttf"/>

                                <Button Text="Reproducir"
                                        BackgroundColor="#0044CC"
                                        TextColor="White"
                                        CornerRadius="10"
                                        FontFamily="Montserrat-Bold.ttf"
                                        Command="{Binding BindingContext.PlayCommand, Source={x:Reference Name=PageRoot}}"
                                        CommandParameter="{Binding Archivo}"/>

                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

