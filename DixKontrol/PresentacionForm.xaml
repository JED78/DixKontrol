<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DixKontrol.PresentacionForm"
             Background="{StaticResource AppBackgroundGradient}">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#050509" Offset="0.0" />
            <GradientStop Color="#151525" Offset="0.4" />
            <GradientStop Color="#000000" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <Grid RowDefinitions="Auto, Auto, *" Padding="30">

        <!-- Imagen circular -->
        <Grid
    x:Name="AvatarContainer"
    Grid.Row="0"
    HorizontalOptions="Center"
    VerticalOptions="Center"
    Margin="0,20">

            <Frame
        WidthRequest="240"
        HeightRequest="240"
        CornerRadius="120"
        Padding="8"
        BackgroundColor="White"
        HasShadow="False">

                <Frame
            CornerRadius="112"
            Padding="0"
            BackgroundColor="Transparent"
            HasShadow="False">

                    <Image
                Source="nando_perfil.jpg"
                Aspect="AspectFill"/>
                </Frame>

            </Frame>

        </Grid>




        <!-- Nombre + descripción -->
        <StackLayout
            Grid.Row="1"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="6">

            <Label  x:Name="NombreLabel"
                Text="Nando Dixkontrol"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalTextAlignment="Center" FontFamily="Montserrat-Bold.ttf"/>

            <Label
                 x:Name="DescripcionLabel"
                Text="Figura esencial de la electrónica barcelonesa, pionero del Psicódromo y símbolo de una generación."
                FontFamily="Montserrat-Regular.ttf"
                FontSize="16"
                TextColor="White"
                HorizontalTextAlignment="Center"
                Margin="20,0" Opacity="0"/>
        </StackLayout>

        <!-- Botón -->
        <Button
            Grid.Row="2"
            Text="Iniciar"
            FontSize="20"
            TextColor="Black"
            BackgroundColor="White"
            CornerRadius="12"
            HeightRequest="55"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            WidthRequest="240"
            Margin="0,40,0,0"
            Clicked="Button_Clicked"/>

    </Grid>

</ContentPage>